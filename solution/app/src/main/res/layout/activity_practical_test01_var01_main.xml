<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var01.PracticalTest01Var01MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nord" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonVest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="vest" />

            <Button
                android:id="@+id/buttonEst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="est" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonSud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sud" />

        <EditText
            android:id="@+id/editTextLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>

        <Button
            android:id="@+id/buttonChangeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
